- var application = [{name: 'application', id: 'formApplication', text : 'Отправить заявку', application: true, button: 'Отправить', success: 'Ваша заявка отправлена'}]
- var order = [{name: 'order', id: 'formOrder', text : 'Заказ товара', order: true, button: 'Заказать', success: 'Ваша заявка отправлена'}]



mixin form(items)
  each item in items
    +b.SECTION(class= 'form--' + item.name)
      +e.H3.title #{item.title}
      +e.P.text #{item.text}
      +e.FORM.form(action='', method='', id= item.id)

        if item.application
          .form-group.required.has-error
            +e.INPUT.input(type='text', name='Имя', placeholder='Имя*')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.required.has-success
            +e.INPUT.input(type='tel', name='Телефон', placeholder='Телефон')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.required
            +e.INPUT.input(type='email', name='Email', placeholder='Еmail')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group
            +e.TEXTAREA.textarea(type='text', name='Текст', placeholder='Текст')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.required
            +b.BUTTON.btn--form(type='submit') #{item.button}
            p.help-block.help-block-success #{item.success}

        if item.order
          .row
            .col-xs-12.col-md-6
              +e.card
                +catalogItem('catalog-item.jpg',
                  'Гидромолот SB 52',
                  '55 кг',
                  '0,7-1,1 т',
                  '12-27 л/мин',
                  '100-150 бар',
                  '750-1700',
                  '7 кВт')
            .col-xs-12.col-md-6
              .form-group.required.has-error
                +e.INPUT.input(type='text', name='Имя', placeholder='Имя*')
                p.help-block.help-block-error Ошибка заполнения поля формы
              .form-group.required.has-success
                +e.INPUT.input(type='tel', name='Телефон', placeholder='Телефон')
                p.help-block.help-block-error Ошибка заполнения поля формы
              .form-group.required
                +e.INPUT.input(type='email', name='Email', placeholder='Еmail')
                p.help-block.help-block-error Ошибка заполнения поля формы
              .form-group
                +e.TEXTAREA.textarea(type='text', name='Текст', placeholder='Комментарий')
                p.help-block.help-block-error Ошибка заполнения поля формы
              .form-group.required
                +b.BUTTON.btn--form(type='submit') #{item.button}
                p.help-block.help-block-success #{item.success}




